<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Register</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://unpkg.com/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://unpkg.com/bs-brain@2.0.4/components/registrations/registration-3/assets/css/registration-3.css">
    <link href="https://fonts.googleapis.com/css2?family=Libre+Bodoni:wght@400;700&display=swap" rel="stylesheet">

    <style>
      body, h2, h1 {
        font-family: 'Libre Bodoni', serif;
      }
      a {
        text-decoration: none;
      }
      .login-page {
        width: 100%;
        height: 100vh;
        display: inline-block;
        display: flex;
        align-items: center;
      }
      .form-right i {
        font-size: 100px;
      }
    </style>
  </head>
  <body>
    <!-- Registration 3 - Bootstrap Brain Component -->
    <section class="p-3 p-md-4 p-xl-5">
      <div class="container">
        <div class="row">
          <div class="col-12 col-md-6">
            <img class="img-fluid rounded mx-auto my-4" loading="lazy" src="images/regisgambar.jpg" class="w-100 vh-80" alt="BootstrapBrain Logo">
          </div>
          <div class="col-12 col-md-6 bsb-tpl-bg-lotion mt-4">
            <div class="p-3 p-md-4 p-xl-5 card shadow pb-5">
              <div class="row">
                <div class="col-12">
                  <div class="mb-3">
                    <h2 class="h3">Daftar</h2>
                  </div>
                </div>
              </div>
              <form action="/register" method="post">
                <div class="row gy-3 gy-md-4 overflow-hidden">
                  <div class="col-12">
                    <label for="firstName" class="form-label">Nama <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" name="nama" placeholder="Nama Lengkap" required>
                  </div>
                  <div class="col-12">
                    <label for="lastName" class="form-label">Alamat <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" name="alamat" placeholder="Alamat" required>
                  </div>
                  <div class="col-12">
                    <label for="email" class="form-label">Nomor Telpon <span class="text-danger">*</span></label>
                    <input type="number" class="form-control" name="no_telp" placeholder="Nomor Telpon" required maxlength="13">
                  </div>
                  <div class="col-12">
                    <label for="email" class="form-label">Username <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" name="userName" placeholder="Username" required>
                  </div>
                  <div class="col-12">
                    <label for="password" class="form-label">Password <span class="text-danger">*</span></label>
                    <input type="password" class="form-control" name="password" id="password" placeholder="Password" value="" required maxlength="10">
                  </div>
                  <!-- <div class="col-12">
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" value="" name="iAgree" id="iAgree" required>
                      <label class="form-check-label text-secondary" for="iAgree">
                        I agree to the <a href="#!" class="link-primary text-decoration-none">terms and conditions</a>
                      </label>
                    </div>
                  </div> -->
                  <div class="col-12">
                    <div class="d-grid">
                      <button class="btn bsb-btn-xl btn-secondary" type="submit">Daftar</button>
                    </div>
                  </div>
                </div>
              </form>
              <div class="row">
                <div class="col-12">
                  <hr class="mt-5 mb-5 border-secondary-subtle">
                  <p class="m-0 text-secondary text-end">Sudah Punya Akun? <a href="/login" class="link-primary text-decoration-none">Login</a></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Bootstrap JS -->
  </body>
</html>
